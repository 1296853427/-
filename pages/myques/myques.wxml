<scroll-view scroll-y="true" class="container" bindscrolltoupper="upper" upper-threshold="10" lower-threshold="5"
  bindscrolltolower="lower" scroll-into-view="{{toView}}" scroll-top="{{scrollTop}}">
  <block wx:for="{{question}}" wx:for-index="idx" wx:for-item="item" data-idx="{{idx}}" wx:key="QuestionID" wx:for-index="list">
		<view class="feed-item" catchtap="bindItemTap" data-typeid="{{list}}">
			<view class="feed-source">
				<a class="">
					<view class="avatar">
						<image src="{{item.feed_source_img}}"></image>
					</view>
					<text>{{item.feed_source_name}}{{item.feed_source_txt}}</text>
				</a>
				<image class="item-more" mode="aspectFit" src="../../static/icon/more.png"></image>
			</view>
			<view class="feed-content">
				<view class="question" qid="{{QuestionID}}">
					<a class="question-link">
						<text>{{item.content}}</text>
					</a>
				</view>
				<view class="answer-body">
					<view>
						<text class="answer-txt" aid="{{answer_id}}">{{item.answer_ctnt}}</text>
					</view>
					<view class="answer-actions">
						<view class="like dot">
							<a>{{item.good_num}} 赞同 </a>
						</view>
						<view class="comments dot">
							<a>{{item.comment_num}} 评论 </a>
						</view>
						<view class="follow-it">
							<a>关注问题</a>
						</view>
					</view>
				</view>
			</view>
		</view>
	</block>
</scroll-view>