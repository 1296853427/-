/**index.wxss**/
page {
  display: flex;
  flex-direction: column;
  height: 100%;
}

.navbar {
  flex: none;
  display: flex;
  background: #fff;
}

.navbar .item {
  position: relative;
  flex: auto;
  text-align: center;
  line-height: 80rpx;
  font-size: 14px;
}

/* 顶部导航字体颜色 */
.navbar .item.active {
  color: #f0145a;
}

/* 顶部指示条属性 */
.navbar .item.active:after {
  content: "";
  display: block;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 6rpx;
  background: #f0145a;
}

/*跳转小按钮新书*/
.navs {
  display: flex;
}

.nav-item {
  width: 25%;
  display: flex;
  align-items: center;
  flex-direction: column;
  padding: 20rpx;
}

.nav-item .nav-image {
  width: 80rpx;
  height: 80rpx;
  /*border-radius: 50%;设置边界圆角*/
}

.nav-item text {
  padding-top: 20rpx;
  font-size: 25rpx;
}


/*推荐书籍の样式*/
.category-title {
  display: flex;
  text-align: center;
  flex-direction: column;
  margin-top: 20rpx;
  margin-bottom: 0rpx;
  padding: 0px 10px;

}

.category-title .title {
  font-size: 14px;
  font-weight: 900;
}

.goods {
  display: flex;
}

.goods-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #333;
}

.goods-image {
  width: 280rpx;
  height: 300rpx;
}

.goods-item text {
  font-size: 25rpx;
}

.goods-item p {
  font-size: 30rpx;
}

/* 分割线 */
.separate {
  height: 15rpx;
  background-color: #f2f2f2;
}

/* swiper属性 */
swiper {
  height: 300rpx;
}

swiper-item image {
  width: 100%;
  height: 100%;
}

.advertisement {
  display: block;
  width: 100%;
  height: 70rpx;
  background-color: #f2f2f2;
  line-height: 70rpx;
}

.marquee_box {
  width: 100%;
  position: relative;
}

.marquee_text {
  white-space: nowrap;
  position: absolute;
  top: 0;
  display: flex;
  flex-direction: row;
}

.ad-image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
  margin-top: 15rpx;
}

